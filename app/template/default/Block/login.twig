<div class="headerNav">
	{% if is_granted('ROLE_USER') %}
		<div class="headerNav__item">
			<a href="{{ url('mypage') }}">
				<i class="headerNav__itemIcon fas fa-user fa-fw"></i>
				<span class="headerNav__itemLink">{{ 'front.block.login.mypage'|trans }}</span>
			</a>
		</div>
		{% if BaseInfo.option_favorite_product %}
			<div class="headerNav__item">
				<a href="{{ url('mypage_favorite') }}">
					<i class="headerNav__itemIcon fas fa-heart fa-fw"></i>
					<span class="headerNav__itemLink">{{ 'front.block.login.favorite'|trans }}</span>
				</a>
			</div>
		{% endif %}
		<div class="headerNav__item">
			<a href="{{ url('logout') }}">
				<i class="headerNav__itemIcon fas fa-lock fa-fw"></i>
				<span class="headerNav__itemLink">{{ 'front.block.login.logout'|trans }}</span>
			</a>
		</div>
	{% else %}
		<div class="headerNav__item">
			<a href="{{ url('entry') }}">
				<i class="headerNav__itemIcon fas fa-user fa-fw"></i>
				<span class="headerNav__itemLink">{{ 'front.block.login.customer_registration'|trans }}</span>
			</a>
		</div>
		{% if BaseInfo.option_favorite_product %}
			<div class="headerNav__item">
				<a href="{{ url('mypage_favorite') }}">
					<i class="headerNav__itemIcon fas fa-heart fa-fw"></i>
					<span class="headerNav__itemLink">{{ 'front.block.login.favorite'|trans }}</span>
				</a>
			</div>
		{% endif %}
		<div class="headerNav__item">
			<a href="{{ url('mypage_login') }}">
				<i class="headerNav__itemIcon fas fa-lock fa-fw"></i>
				<span class="headerNav__itemLink">{{ 'front.block.login.login'|trans }}</span>
			</a>
		</div>
	{% endif %}
</div>
